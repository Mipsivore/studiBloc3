    <!-- Session Factory basée sur PostGreSql --> 
    <session-factory>
        <!-- Database connection properties -->
        <property name="hibernate.connection.driver_class">org.postgresql.Driver</property>
        <property name="hibernate.connection.url">jdbc:postgresql://localhost:5432/mycart</property>
        <property name="hibernate.connection.username">postgres</property>
        <property name="hibernate.connection.password">J1wR=nO$?|wZjN~c-VF#</property>

        <!-- Other Hibernate properties -->
        <property name="hibernate.dialect">org.hibernate.dialect.PostgreSQLDialect</property>
        <property name="hibernate.show_sql">true</property>
        <property name="hibernate.format_sql">true</property>

        <property name="connection_pool_size">5</property>

        <!-- first time it is create and then onwards update -->
        <property name="hbm2ddl.auto">create</property>

        <!-- Mapping files or annotated classes --> 
